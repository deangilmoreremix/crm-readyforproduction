#############################################
# Client-side (Vite) variables
# Safe to expose to the browser but must NOT contain privileged keys
# Configure these in your local .env (untracked) or hosting provider
#############################################

VITE_ENV=development

# Supabase (client)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# AI providers (client-side SDKs only if you truly intend to call from browser; prefer server proxy)
VITE_OPENAI_API_KEY=
VITE_OPENAI_MODEL=gpt-4o
VITE_GEMINI_API_KEY=
VITE_GEMINI_MODEL=gemini-2.5-flash
VITE_ANTHROPIC_API_KEY=
VITE_ELEVENLABS_API_KEY=
VITE_GOOGLE_AI_API_KEY=

# Optional client integrations
VITE_COMPOSIO_API_KEY=
VITE_COMPOSIO_BASE_URL=https://api.composio.dev
VITE_CRM_API_URL=
VITE_CRM_API_KEY=
VITE_SENDGRID_API_KEY=
VITE_FROM_EMAIL=noreply@example.com
VITE_CLERK_PUBLISHABLE_KEY=

# Frontend service base URLs
VITE_API_URL=http://localhost:3001/api
VITE_CONTACTS_API_URL=http://localhost:3001/api
VITE_ENRICHMENT_API_URL=http://localhost:3002/api
VITE_VALIDATION_API_URL=http://localhost:3003/api
VITE_ANALYTICS_API_URL=http://localhost:3004/api
VITE_AUTH_API_URL=http://localhost:3000/auth

# Logging (optional)
VITE_LOG_LEVEL=info
VITE_LOGGING_ENDPOINT=


#############################################
# Server-side variables â€” NEVER exposed to client
# Set these in your server environment (Actions, Netlify, Vercel, etc.)
#############################################

DATABASE_URL=
JWT_SECRET=
SESSION_SECRET=
BASE_URL=http://localhost:5173

# Provider API keys (server)
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
SENDGRID_API_KEY=
COMPOSIO_API_KEY=

# Supabase (server/admin)
VITE_SUPABASE_SERVICE_ROLE_KEY=

# OAuth / Auth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# White-label integration
WHITE_LABEL_API_URL=
WHITE_LABEL_API_KEY=

# Replit Auth (if applicable)
REPLIT_DOMAINS=
ISSUER_URL=https://replit.com/oidc
REPL_ID=

# Twilio (if used by server-side functions)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature flags / misc
USE_IN_MEMORY_DB=false

# Notes:
# - Do NOT commit real secrets.
# - Client VITE_* keys are readable by anyone with app access; prefer server routes for privileged calls.
